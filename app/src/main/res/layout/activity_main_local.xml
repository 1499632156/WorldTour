<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="上海"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center"
                        android:layout_weight="1"
                        android:text="10'晴" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="150dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/home" />

            <TableLayout
                android:id="@+id/tableLayout_travel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:paddingTop="5dip">
                    <!-- 1 -->
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dip">


                        <Button
                            android:id="@+id/panorama_click"
                            android:layout_width="fill_parent"
                            android:layout_height="127dp"
                            android:background="#FF3366"
                            android:drawableBottom="@drawable/guide_image"
                            android:gravity="top"
                            android:padding="5dip"
                            android:text="VR导航"
                            android:textColor="#ffffff"
                            android:textSize="15dip" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />

                        <Button
                            android:id="@+id/ar_click"
                            android:layout_width="fill_parent"
                            android:layout_height="126dp"
                            android:layout_marginTop="10dip"
                            android:background="#FF6600"
                            android:drawableBottom="@drawable/ar_image"
                            android:gravity="top"
                            android:padding="5dip"
                            android:text="AR景点浏览"
                            android:textColor="#ffffff"
                            android:textSize="15dip" />

                        <Button
                            android:id="@+id/map_click"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="10dip"
                            android:layout_weight="1"
                            android:background="#009933"
                            android:drawableBottom="@drawable/map_image"
                            android:gravity="top"
                            android:padding="5dip"
                            android:text="地图"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />


                    </LinearLayout>
                    <!-- 2 -->
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dip">

                        <Button
                            android:id="@+id/navi_click"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="#CC33FF"
                            android:drawableBottom="@drawable/home_train"
                            android:gravity="top"
                            android:padding="10dip"
                            android:text="交通导航"
                            android:textColor="#ffffff"
                            android:textSize="15dip" />

                        <Button
                            android:id="@+id/spot_click"
                            android:layout_width="fill_parent"
                            android:layout_height="109dp"
                            android:layout_marginTop="10dip"
                            android:background="#00CCFF"
                            android:drawableBottom="@drawable/home_scenery"
                            android:gravity="top"
                            android:padding="5dip"
                            android:text="热门景点"
                            android:textColor="#ffffff"
                            android:textSize="15dip" />

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dip"
                            android:background="#99CC00"
                            android:drawableBottom="@drawable/home_lastmin"
                            android:gravity="top"
                            android:padding="5dip"
                            android:text="酒店"
                            android:textColor="#ffffff"
                            android:textSize="15dip" />

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dip"
                            android:background="#FFCC00"
                            android:drawableBottom="@drawable/zhushou_image"
                            android:gravity="top"
                            android:padding="5dip"
                            android:text="智能助理"
                            android:textColor="#ffffff"
                            android:textSize="15dip" />

                    </LinearLayout>

                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>


        </LinearLayout>
    </ScrollView>>
</LinearLayout>
